<% provide(:title, 'Directory Listing') %>
<h1>Directory Listing</h1>

<table class="table table-hover table-bodered">
  <thead>
    <tr>
      <th></th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Department</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
    <% department.employees.each do |employee| %>
      <tr>
      <td><%= employee.firstname  %></td>
      <td><%= employee.lastname %></td>
      <td><%= employee.department ? employee.department.name : 'Unassigned'  %></td>
      <td><%= link_to "Transfer", '#' %></td>
      <td><%= link_to 'Show', '#' %></td>
      <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>

